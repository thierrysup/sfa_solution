{% extends 'base.html.twig' %}

{% block body %}
    <h1>Po</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pO.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pO.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ pO.adresse }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ pO.phone }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if pO.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pO.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pos_edit', { 'id': pO.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
