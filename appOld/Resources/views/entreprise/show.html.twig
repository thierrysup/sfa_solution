{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entreprise</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entreprise.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entreprise.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entreprise.adresse }}</td>
            </tr>
            <tr>
                <th>Pobox</th>
                <td>{{ entreprise.pobox }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entreprise.phone }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entreprise.description }}</td>
            </tr>
            <tr>
                <th>Colorstyle</th>
                <td>{{ entreprise.colorStyle }}</td>
            </tr>
            <tr>
                <th>Logourl</th>
                <td>{{ entreprise.logoURL }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if entreprise.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entreprise_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('entreprise_edit', { 'id': entreprise.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
