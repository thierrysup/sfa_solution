{% extends 'base.html.twig' %}

{% block body %}
    <h1>Quarter</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quarter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ quarter.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ quarter.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if quarter.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('quarter_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('quarter_edit', { 'id': quarter.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
